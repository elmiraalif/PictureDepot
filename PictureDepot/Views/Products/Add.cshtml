@using PictureDepot.Models
@model List<PictureDepot.Models.Artist>


@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Product</h2>
<form action="/Products/Add" method="post" class="form-horizontal">
    <div class="form-group">
        <label class="col-lg-2 control-label" for="Name">Name:</label>
        <div class="col-lg-10">
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Product Name">
        </div>
    </div>
    <div class="form-group">
        <label for="Code" class="col-lg-2 control-label">PD Code:</label>
        <div class="col-lg-10">
            <input type="text" class="form-control" id="Code" name="Code" placeholder="PicDepot Number">
        </div>
    </div>
    <div class="form-group">
        <label for="Year" class="col-lg-2 control-label">Year:</label>
        <div class="col-lg-10">
            <input type="text" class="form-control" id="Year" name="Year" placeholder="Year Published">
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
            <a href="/Products/List"><button type="button" class="btn btn-default">Cancel</button></a>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>



