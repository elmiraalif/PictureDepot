@using PictureDepot.Models
@model List<PictureDepot.Models.Product>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>
<form class="navbar-form navbar-right" method="get" action="/Products/List">
    <div class="form-group">
        <input type="text" class="form-control" name="productSearchKeyword" placeholder="Search">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

<a href="/Products/Add" class="btn btn-primary">New Product</a>



<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Code</th>
        <th class="text-center">Year Created</th>
        <th class="text-center">Artist</th>
        <th class="text-center">&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    @{
        foreach (var product in @Model)

        {
            <tr>
                <td class="text-center">@product.Name</td>
                <td class="text-center">@product.Code</td>
                <td class="text-center">@product.Year</td>
                <td class="text-center"><a>@product.ArtistId</a></td>
                <td class="text-center">
                    <form action="/Products/Delete" method="Post">
                        <button type="submit" class="btn btn-default">Delete</button>
                    </form>
                </td>
            </tr>
        }

    }
    </tbody>
</table>


<div class="text-center">
    <ul class="pagination align-items-center">
        <li class="disabled"><a href="#">&laquo;</a></li>
        <li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a href="#">&raquo;</a></li>
    </ul>
</div>