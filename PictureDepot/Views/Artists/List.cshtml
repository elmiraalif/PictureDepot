@using PictureDepot.Models
@model List<PictureDepot.Models.Artist>

@{
    ViewBag.Title = "Artists";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Artists</h2>
<form class="navbar-form navbar-right" role="search" method="get" action="/Artists/List">
    <div class="form-group">
        <input type="text" class="form-control" name="artistSearchKeyword" placeholder="Search">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

<a href="/Artists/Add" class="btn btn-primary">New Artist</a>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-center">Name</th>
            <th class="text-center">Date of Birth</th>
            <th class="text-center">Hire Date</th>
            <th class="text-center">Contact</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var artist in Model)
            {
                <tr>
                    <!-- concatenate the first name and the last name in razor view :
    source: https://stackoverflow.com/questions/16106196/concatenating-strings-in-razor
    -->

                    <td class="text-center"><a class="btn btn-link" href="Show/@artist.ArtistId">@(artist.FirstName + " " + artist.LastName)</a></td>
                    <td class="text-center">@artist.BirthDate</td>
                    <td class="text-center">@artist.HireDate</td>
                    <td class="text-center">@artist.Phone<br />@artist.Email</td>
                    <td class="text-center">
                        <form action="/Artists/Delete/@artist.ArtistId" method="Post">
                            <button type="submit" class="btn btn-default">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination align-items-center">
        <li class="disabled"><a href="#">&laquo;</a></li>
        <li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a href="#">&raquo;</a></li>
    </ul>
</div>


